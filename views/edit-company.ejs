<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/nav.ejs") %>
    <p>edit company</p>
    <div class="bcb">
      <form action="/company/edit/<%=company._id%>" method="post">
        <input
          type="text"
          id="name"
          name="name"
          value="<%=company.name%>"
          placeholder="Name"
          required
        />
        <input
          type="text"
          id="address"
          name="address"
          value="<%=company.address%>"
          placeholder="Address"
          required
        />
        <input
          type="tel"
          id="phone"
          name="phone"
          value="<%=company.phone%>"
          placeholder="Phone No."
          required
        />
        <input
          type="email"
          id="email"
          name="email"
          value="<%=company.email%>"
          placeholder="Email"
        />
        <input
          type="text"
          id="BIN"
          name="BIN"
          value="<%=company.BIN%>"
          placeholder="BIN no."
          required
        />
        <input
          type="text"
          id="ID"
          name="ID"
          value="<%=company.ID%>"
          placeholder="NBR id"
          required
        />
        <input
          type="text"
          id="pass"
          name="pass"
          value="<%=company.pass%>"
          placeholder="NBR pass"
          required
        />
        <input
          type="text"
          id="circle"
          name="circle"
          value="<%=company.circle%>"
          placeholder="Circle"
          required
        />

        <input type="radio" id="html" name="type" value="Importer"
        <%=company.type === "Importer"? "checked": ""%>/>Importer <input
        type="radio" id="css" name="type" value="Manufacturer" <%=company.type
        === "Manufacturer"? "checked": ""%> />Manufacturer <input type="radio"
        id="javascript" name="type" value="Local trader" <%=company.type ===
        "Local trader"? "checked": ""%> />Local Trader<br />
        <button type="submit">Update</button>
      </form>
    </div>
  </body>
</html>
